<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E8F1EF">

    <!-- HEADER -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="57dp"
        android:background="#E8F1EF"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:navigationIcon="@drawable/ic_chevron_left_16"
        app:title="Perfil"
        app:titleTextColor="#3A3A3A"
        app:titleCentered="true" />

    <!-- CONTENIDO SCROLLABLE -->
    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:fillViewport="true"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="12dp"
            android:paddingBottom="80dp"
            android:dividerPadding="0dp">

            <!-- Avatar + Cambiar foto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingTop="8dp"
                android:paddingBottom="8dp">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/imgAvatar"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                    app:srcCompat="@drawable/ic_avatar_placeholder" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btnChangePhoto"
                    style="@style/Widget.Material3.Button"
                    android:layout_width="wrap_content"
                    android:layout_height="32dp"
                    android:layout_marginTop="12dp"
                    android:paddingStart="12dp"
                    android:paddingEnd="12dp"
                    android:text="Cambiar foto"
                    android:textSize="12sp"
                    android:fontFamily="@font/geist"
                    android:textColor="#3A3A3A"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeColor="#E4E4E4"
                    app:strokeWidth="1dp"
                    app:icon="@drawable/ic_pen_16"
                    app:iconTint="#3A3A3A"
                    app:iconPadding="6dp" />
            </LinearLayout>

            <!-- Título sección -->
            <TextView
                android:id="@+id/tvSectionTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Información personal"
                android:textSize="16sp"
                android:textColor="#3A3A3A"
                android:fontFamily="@font/geist"
                android:fontWeight="600"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp" />

            <!-- CARD: Nombre -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#F8F8F8"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="#E4E4E4"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="17dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/bg_circle_solid"
                        android:backgroundTint="#3400958A"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                        app:srcCompat="@drawable/ic_avatar_placeholder"
                        app:tint="#043F30" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Nombre completo"
                            android:textSize="12sp"
                            android:textColor="#636363"
                            android:fontFamily="@font/geist" />

                        <TextView
                            android:id="@+id/tvName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="María González"
                            android:textSize="14sp"
                            android:textColor="#3A3A3A"
                            android:fontFamily="@font/geist"
                            android:fontWeight="500" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditName"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:icon="@drawable/ic_pen_16"
                        app:iconTint="#3A3A3A"
                        app:backgroundTint="@android:color/transparent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CARD: Email -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardEmail"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardBackgroundColor="#F8F8F8"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="#E4E4E4"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="17dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/bg_circle_solid"
                        android:backgroundTint="#3400958A"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                        app:srcCompat="@drawable/ic_email"
                        app:tint="#043F30" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Correo electrónico"
                            android:textSize="12sp"
                            android:textColor="#636363"
                            android:fontFamily="@font/geist" />

                        <TextView
                            android:id="@+id/tvEmail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="maria.gonzalez@email.com"
                            android:textSize="14sp"
                            android:textColor="#3A3A3A"
                            android:fontFamily="@font/geist"
                            android:fontWeight="500" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditEmail"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:icon="@drawable/ic_pen_16"
                        app:iconTint="#3A3A3A"
                        app:backgroundTint="@android:color/transparent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- CARD: Contraseña -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardBackgroundColor="#F8F8F8"
                app:cardCornerRadius="16dp"
                app:cardElevation="2dp"
                app:strokeColor="#E4E4E4"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="17dp"
                    android:paddingEnd="12dp"
                    android:paddingTop="16dp"
                    android:paddingBottom="16dp">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:background="@drawable/bg_circle_solid"
                        android:backgroundTint="#3400958A"
                        app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                        app:srcCompat="@drawable/ic_lock"
                        app:tint="#043F30" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_marginStart="12dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Contraseña"
                            android:textSize="12sp"
                            android:textColor="#636363"
                            android:fontFamily="@font/geist" />

                        <TextView
                            android:id="@+id/tvPassword"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="••••••••"
                            android:textSize="14sp"
                            android:textColor="#3A3A3A"
                            android:fontFamily="@font/geist"
                            android:fontWeight="500" />
                    </LinearLayout>

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btnEditPassword"
                        style="@style/Widget.Material3.Button.IconButton"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        app:icon="@drawable/ic_pen_16"
                        app:iconTint="#3A3A3A"
                        app:backgroundTint="@android:color/transparent" />
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Botones acción -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChangeEmail"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Cambiar correo electrónico"
                android:textSize="14sp"
                android:fontFamily="@font/geist"
                android:textColor="#3A3A3A"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="#E4E4E4"
                app:strokeWidth="1dp" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnChangePassword"
                style="@style/Widget.Material3.Button"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginTop="8dp"
                android:text="Cambiar contraseña"
                android:textSize="14sp"
                android:fontFamily="@font/geist"
                android:textColor="#3A3A3A"
                app:backgroundTint="@android:color/transparent"
                app:strokeColor="#E4E4E4"
                app:strokeWidth="1dp" />

        </LinearLayout>
    </ScrollView>

    <!-- BOTTOM NAV (ya lo tenés en el proyecto) -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBar"
        style="@style/Widget.App.BottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E8F1EF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:itemIconTint="@color/nav_item_tint"
        app:itemTextColor="@color/nav_item_tint"
        app:itemBackground="@drawable/bnv_item_background"
        app:menu="@menu/menu_bottom_nav" />

</androidx.constraintlayout.widget.ConstraintLayout>
