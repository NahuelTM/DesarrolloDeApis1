<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8f1ef"
    tools:context=".MainActivity">

    <!-- HEADER (85dp alto) -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="85dp"
        android:background="#e8f1ef"
        app:title=""
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:contentInsetStartWithNavigation="0dp"
        app:contentInsetLeft="0dp"
        app:contentInsetRight="0dp">

        <!-- Contenedor interno para replicar padding 24/16 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:paddingStart="24dp"
            android:paddingEnd="24dp"
            android:paddingTop="16dp"
            android:paddingBottom="17dp"
            android:gravity="center_vertical">

            <!-- Columna izquierda: "Tu balance" + monto + chip -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tvBalanceLabel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tu balance"
                    android:textSize="14sp"
                    android:textColor="#636363"
                    android:fontFamily="@font/geist"
                    android:fontWeight="500" /> <!-- Medium -->

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginTop="0dp">

                    <TextView
                        android:id="@+id/tvBalanceAmount"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="$0.00"
                        android:textSize="24sp"
                        android:textColor="#499537"
                        android:fontFamily="@font/geist"
                        android:fontWeight="700" /> <!-- Bold -->

                    <!-- Chip “A favor” -->
                    <com.google.android.material.chip.Chip
                        android:id="@+id/chipAFavor"
                        style="@style/Widget.Material3.Chip.Assist.Elevated"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="A favor"
                        android:textSize="12sp"
                        android:textColor="#016630"
                        app:chipBackgroundColor="@color/chip_bg_green"
                        app:chipStrokeWidth="1dp"
                        app:chipStrokeColor="#b9f8cf" />
                </LinearLayout>
            </LinearLayout>

            <!-- Botón de opciones -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnOptions"
                style="@style/Widget.Material3.Button.IconButton"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:icon="@drawable/ic_pen_16"
                app:iconTint="#3a3a3a"
                app:backgroundTint="@android:color/transparent" />

            <!-- Avatar redondo 40x40 -->
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/imgAvatar"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="12dp"
                android:scaleType="centerCrop"
                app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                app:srcCompat="@drawable/ic_avatar_placeholder" />
        </LinearLayout>
    </com.google.android.material.appbar.MaterialToolbar>

    <!-- CONTENIDO principal (bg #e8f1ef y padding 24 / bottom extra para nav) -->
    <LinearLayout
        android:id="@+id/mainContent"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:padding="24dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintBottom_toTopOf="@id/bottomBar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Caja central 400x400 con círculo e ícono (bg #043f30) -->
        <LinearLayout
            android:id="@+id/emptyContainer"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:paddingTop="32dp"
            android:paddingBottom="32dp">

            <LinearLayout
                android:layout_width="400dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical">

                <!-- Círculo 80x80 -->
                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:background="@drawable/bg_circle_solid"
                    android:backgroundTint="#043f30"
                    android:contentDescription="@string/cd_empty_icon"
                    android:padding="10dp"
                    app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"
                    app:srcCompat="@drawable/ic_empty_groups_40"
                    app:tint="@android:color/white" />

                <!-- Título -->
                <TextView
                    android:id="@+id/tvEmptyTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="24dp"
                    android:fontFamily="@font/geist"
                    android:fontWeight="600"
                    android:text="Sin grupos aún"
                    android:textColor="#3a3a3a"
                    android:textSize="18sp" />

                <!-- Subtítulo centrado 2 líneas -->
                <TextView
                    android:id="@+id/tvEmptySubtitle"
                    android:layout_width="310dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/geist"
                    android:fontWeight="400"
                    android:gravity="center"
                    android:lineSpacingExtra="2dp"
                    android:text="Todavía no sos parte de ningún grupo.\nUnite a uno existente o creá el tuyo propio."
                    android:textColor="#636363"
                    android:textSize="16sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <!-- BOTTOM NAV -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomBar"
        style="@style/Widget.App.BottomNavigation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#E8F1EF"
        app:itemIconTint="@color/nav_item_tint"
        app:itemTextColor="@color/nav_item_tint"
        app:itemBackground="@drawable/bnv_item_background"
        app:menu="@menu/menu_bottom_nav"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- FAB flotante (56dp, fondo #043f30) -->
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fabAdd"
        android:layout_width="56dp"
        android:layout_height="56dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="90dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:backgroundTint="#043f30"
        app:srcCompat="@drawable/ic_add_16"
        app:tint="@android:color/white" />

</androidx.constraintlayout.widget.ConstraintLayout>
