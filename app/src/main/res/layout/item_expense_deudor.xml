<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    app:cardCornerRadius="16dp"
    app:cardUseCompatPadding="true"
    app:cardBackgroundColor="#F8F8F8"
    app:strokeColor="#E4E4E4"
    app:strokeWidth="1dp"
    app:cardElevation="2dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="17dp"
        android:paddingEnd="17dp"
        android:paddingTop="16dp"
        android:paddingBottom="10dp"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <!-- Ícono 48 redondo -->
        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:background="@drawable/bg_circle_solid"
            android:backgroundTint="#008994"
            android:padding="12dp"
            app:shapeAppearanceOverlay="@style/ShapeAppearance.Material3.Corner.Full"

            app:tint="#008994" />
        <!-- app:srcCompat="@drawable/ic_utensils_24" -->

        <!-- Centro: título + meta + botón -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="16dp"
            android:orientation="vertical">

            <!-- Ej: "Debes $45.20 a Ana" / "Carlos te debe $75.50" -->
            <TextView
                android:id="@+id/tvTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Debes $45.20 a Ana"
                android:textColor="#3A3A3A"
                android:textSize="14sp"
                android:fontFamily="@font/geist"
                android:fontWeight="600" />

            <!-- Grupo • Fecha -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tvGroup"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Viaje a Brasil 2026"
                    android:textColor="#636363"
                    android:textSize="12sp"
                    android:fontFamily="@font/geist"
                    android:fontWeight="400" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="•"
                    android:textColor="#636363"
                    android:textSize="12sp"
                    android:fontFamily="@font/geist" />

                <TextView
                    android:id="@+id/tvDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:text="12/1/2024"
                    android:textColor="#636363"
                    android:textSize="12sp"
                    android:fontFamily="@font/geist"
                    android:fontWeight="400" />
            </LinearLayout>

            <!-- Botón "Pagar" (se muestra solo si corresponde) -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnPay"
                style="@style/Widget.Material3.Button"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_marginTop="8dp"
                android:minWidth="0dp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:text="Pagar"
                android:textSize="12sp"
                android:fontFamily="@font/geist"
                android:fontWeight="500"
                android:textColor="@android:color/white"
                android:visibility="visible"
                app:backgroundTint="#043F30" />
        </LinearLayout>

        <!-- Derecha: monto + estado -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="end">

            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$45.20"
                android:textSize="18sp"
                android:fontFamily="@font/geist"
                android:fontWeight="700"
                android:textColor="#D40924" />

            <TextView
                android:id="@+id/tvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pendiente"
                android:textSize="12sp"
                android:textColor="#636363"
                android:fontFamily="@font/geist"
                android:fontWeight="400" />
        </LinearLayout>
    </LinearLayout>
</com.google.android.material.card.MaterialCardView>
